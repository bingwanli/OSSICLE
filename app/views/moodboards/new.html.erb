<h1>New moodboard</h1>


<%= simple_form_for @moodboard do |f| %>
  <%= f.input :title %>
  <%= f.input :detail %>
  <%= f.input :shoe_type %>
  <%= f.input :photos, multiple: true %>


  <%= f.submit "add moodboard", class: "btn btn-primary" %>
<% end %>
