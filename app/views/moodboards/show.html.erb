<!-- nav bar -->
<%= render "devise/shared/navbar" %>

 <div>
  <div class="text_container">
   <div class="bg-text">MOODBOARD</div>
   <div>
     <ul class="attributes">
       <li>Title: <%= @moodboard.title %></li>
       <li>Poster: <%= @moodboard.user.name %></li>
       <li>Shoe: <%= @moodboard.shoe_type %></li>
       <li>Votes: <%= @moodboard.votes %></li>
       <li>Description: <%= @moodboard.detail %></li>
       <li class="my-3"><%= link_to "Design Shoe", new_moodboard_shoe_path(@moodboard.id), class: "form-btn"  %></li>
     </ul>
   </div>
  </div>
 </div>


 <div>
  <% @moodboard_attachments.each do |attachment| %>
    <div class="parallax bg-image" style="background-image: url('<%= cl_image_path attachment.image %>')"></div>
  <% end %>
</div>

<div class="popup-banner">
  <div id="check-shoes">
    <h2 style="text-align: center">Check the shoes projects</h2>
    <!-- <div class="box"> -->
      <div>
        <a class="form-btn" href="#popup1">Shoe me</a>
    <!-- </div> -->
      </div>
    <div id="popup1" class="overlay">
      <div class="popup">
        <h2>NEW SHOES</h2>
        <a class="close" href="#">&times;</a>
        <div class="content">
          <img style="max-width:100%"src="https://cdn.dribbble.com/users/458522/screenshots/6157567/snickers_set_no.1.jpg" alt="Shoes">
        </div>
      </div>
    </div>
  </div>
</div>


<div class="comments-banner">
  <div class="comments-box">
    <h3>Comments box</h3><br>
    <br><%= link_to "Add Comment", new_moodboard_comment_path(@moodboard) %>
      <div class="comments-box">
        <% if @comments.empty? %>
          <div></div>
        <% else %>
          <% @comments.each do |comment| %>
            <img src="https://www.recruitguelph.ca/cecs/sites/uoguelph.ca.cecs/files/public/images/what%27s-your-profile_1.jpg" alt="" style="border-radius:100%;width:40px;height:40px; ">
            <h4><%= comment.user.name %></h4>
            <p><%= comment.comment %></p>
          <% end %>
        <% end %>
      </div>
  </div>
</div>
