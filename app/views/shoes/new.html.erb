<!-- nav bar -->
<%= render "devise/shared/navbar" %>

<% if user_signed_in? && current_user.is_designer %>

  <!-- new shoe form -->
  <div class="container mx-auto mt-3">
    <h1 class="text-center">Design Your Cool Shoe</h1>
      <div class="form">
        <%= simple_form_for @shoe do |f| %>
          <%= f.input :title %>
          <%= f.input :detail %>
          <%= f.input :photo_url %>
          <%= f.input :photo_url_cache, as: :hidden%>
          <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
          <%= f.input :moodboard_id, as: :hidden, input_html: { value: params[:moodboard_id] } %>
          <%= f.submit "HIT IT", class: "btn btn-primary" %>
        <% end %>
      </div>
  </div>


<% else %>
<!-- NEED TO FIGURE OUT IF THERE'S ANOTHER SIGN IN TO JUST ADD PORTFOLIO -->
  <%= link_to "Add your portfolio to become a designer", edit_user_registration_path %>
<% end %>
