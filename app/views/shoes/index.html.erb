<div class="container mx-auto text-center">

  <h1 class="my-3">Sneaker Project</h1>

 <%= link_to "Add Moodboard", shoes_new_path, class: "btn btn-success mb-3 py-2 px-3" %>
<%= link_to "Design Sneaker", shoes_new_path, class: "btn btn-success mb-3 py-2 px-3" %>

  <div class="row mx-auto justify-content-center">
      <% @shoes.each do |shoe| %>

