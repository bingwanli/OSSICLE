          <div class="card-img-top">

          </div>
          <div class="card-body">
            <h5 class="card-title"><%= shoe.shoe_type %></h5>
            <p class="card-text">Ipsum Lorem</p>
            <%= link_to "More", shoes_new_path, class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
  </div>
